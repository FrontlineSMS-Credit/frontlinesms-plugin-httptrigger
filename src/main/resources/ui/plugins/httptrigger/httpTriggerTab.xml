<tab icon="/icons/big_export.png" text="HTTP Trigger" name=":httpTrigger">
    <panel bottom="9" columns="2" gap="9" left="9" right="9" top="9" weightx="1" weighty="1">
    	<label icon="/icons/header/httpTrigger.png" valign="top" />
       	<panel columns="1" weighty="1" weightx="1" gap="8" rowspan="2">
			<panel gap="9">
	    		<label text="i18n.httptrigger.port.select"/>
	   			<textfield name="tfPort"/>
				<button text="Start" name="btStart" action="startListener" icon="/icons/month_up.png"/>
				<button text="Stop" name="btStop" action="stopListener" enabled="false" icon="/icons/delete.png"/>
			</panel>
			<list name="lsHttpTriggerLog" weightx="1" weighty="1" colspan="2"/>
	       	<button action="removeAll(lsHttpTriggerLog)" icon="/icons/clear.png" name="btClear" text="i18n.action.clear" halign="right"/>
		</panel>
   		<button tooltip="i18n.tooltip.click.for.help" valign="bottom" action="showHelpPage('httptrigger.htm')" icon="/icons/big_help.png" type="link"/>
	</panel>
</tab>
